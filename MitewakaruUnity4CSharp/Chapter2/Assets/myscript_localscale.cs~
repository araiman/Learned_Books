using UnityEngine;
using System.Collections;

public class myscript_localscale : MonoBehaviour {

	// Use this for initialization
	void Start () {
	
	}
	
	// Update is called once per frame
	void Update () {
		Vector3 objScale = transform.localScale;

		objScale.x += 0.1f;
		objScale.y += 0.1f;
		objScale.x += 0.1f;

		transform.localScale = objScale;

	}
}
